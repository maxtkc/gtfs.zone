{
  "name": "gtfs.zone",
  "version": "0.0.1",
  "description": "A fast, simple editor for GTFS transit data - inspired by geojson.io",
  "main": "src/index.html",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "serve": "cd dist && live-server --host=localhost --port=8080",
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "generate-gtfs-types": "npx tsx scripts/scrape-gtfs-spec.ts && npx tsx scripts/generate-gtfs-types.ts",
    "typecheck": "tsc --noEmit",
    "deploy": "npm run build && gh-pages -d dist",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "analyze-bundle": "npm run build && npx webpack-bundle-analyzer dist/bundle.js --mode static --open",
    "lighthouse": "lhci autorun",
    "audit": "audit-ci --config audit-ci.json",
    "perf-test": "npm run build && npm run lighthouse"
  },
  "keywords": [
    "gtfs",
    "transit",
    "editor",
    "transport",
    "map"
  ],
  "author": "gtfs.zone contributors",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-html": "^2.0.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/clusterize.js": "^0.18.3",
    "@types/jsdom": "^21.1.7",
    "@types/jszip": "^3.4.0",
    "@types/node": "^24.5.2",
    "@types/papaparse": "^5.3.16",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^16.1.6",
    "live-server": "^1.2.2",
    "node-fetch": "^3.3.2",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "rollup": "^4.50.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^4.1.13",
    "tslib": "^2.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "dependencies": {
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.2",
    "clusterize.js": "^1.0.0",
    "codemirror": "^6.0.2",
    "jszip": "^3.10.1",
    "maplibre-gl": "^5.7.2",
    "papaparse": "^5.5.3",
    "priceless-mathematica": "github:JerryI/codemirror6-mathematica-sugar",
    "zod": "^4.1.9"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss,html}": [
      "prettier --write"
    ]
  }
}
