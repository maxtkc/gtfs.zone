{
  "name": "gtfs.zone",
  "version": "0.0.1",
  "description": "A fast, simple editor for GTFS transit data - inspired by geojson.io",
  "main": "src/index.html",
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "serve": "cd dist && live-server --host=localhost --port=8080",
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "deploy": "npm run build && gh-pages -d dist",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/"
  },
  "keywords": [
    "gtfs",
    "transit",
    "editor",
    "transport",
    "map"
  ],
  "author": "gtfs.zone contributors",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-html": "^2.0.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "gh-pages": "^6.3.0",
    "live-server": "^1.2.2",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "rollup": "^4.50.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^4.1.13"
  },
  "dependencies": {
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.2",
    "clusterize.js": "^1.0.0",
    "codemirror": "^6.0.2",
    "jszip": "^3.10.1",
    "leaflet": "^1.9.4",
    "papaparse": "^5.5.3",
    "priceless-mathematica": "github:JerryI/codemirror6-mathematica-sugar"
  }
}
